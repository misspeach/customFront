<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#d71345" >

        <LinearLayout
            android:id="@+id/sign_bak"
            android:layout_width="50dp"
            android:layout_height="60dp">
            <Button
                android:id="@+id/about_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="20dip"
                android:background="@drawable/back"

                />
        </LinearLayout>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="打卡相关"
            android:textColor="#fff"
            android:typeface="monospace"
            android:textSize="24sp"
            android:layout_marginRight="55dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFF" >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="问题1：无法在日历中显示已打卡记录"
            android:textColor="#d71345"
            android:textSize="15dp"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="帮助：网络拥挤时，显示较慢，请耐心等待1秒钟"
            android:textSize="13dp"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="问题2：打卡后无反应"
            android:textColor="#d71345"
            android:textSize="15dp"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="帮助：检查是否有可用网络，重新启动软件"
            android:textSize="13dp"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="问题3：无法分享"
            android:textColor="#d71345"
            android:textSize="15dp"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="帮助：检查网络是否可用"
            android:textSize="13dp"
            android:padding="10dp" />
        </LinearLayout>
</LinearLayout>