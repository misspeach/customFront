<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical"
 >

<!--编辑个人资料-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#d71345" >

        <LinearLayout
            android:id="@+id/title_back"
            android:layout_width="50dp"
            android:layout_height="60dp">
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="20dip"
            android:background="@drawable/back"

            />
            </LinearLayout>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textColor="#fff"
            android:typeface="monospace"
            android:textSize="24sp"
            android:layout_marginRight="50dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setting_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <TextView

            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="   编辑个人资料"
            android:textSize="17dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_gravity="center" />
        <com.example.shizhan.customfront.gehui.PersonManagement.CircleImageView
            android:id="@+id/Setting_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_centerInParent="true"
            android:src="@drawable/changing"
            app:civ_border_width="2dp"
            app:civ_border_color="#d71345" />


    </LinearLayout>

    <!--帮助-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setting_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingLeft="5dp"
            android:src="@drawable/help"
            android:layout_gravity="center" />
        <TextView

            android:layout_width="285dp"
            android:layout_height="50dp"
            android:text="   帮助中心"
            android:textSize="17dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:src="@drawable/forward"
            android:layout_gravity="center" />

    </LinearLayout>

    <!--协议和关于-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/setting_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingLeft="5dp"
            android:src="@drawable/protocol"
            android:layout_gravity="center" />
        <TextView

            android:layout_width="285dp"
            android:layout_height="50dp"
            android:text="   使用协议"
            android:textSize="17dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:src="@drawable/forward"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingLeft="5dp"
            android:src="@drawable/about"
            android:layout_gravity="center" />
        <TextView

            android:layout_width="285dp"
            android:layout_height="50dp"
            android:text="   关于我们"
            android:textSize="17dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:src="@drawable/forward"
            android:layout_gravity="center" />
    </LinearLayout>


<!--退出账号-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_quit"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="退出账号"
            android:background="#FFFFFF"
            android:textColor="#d71345"
            android:textSize="17dp"
            android:gravity="center_vertical|center_horizontal"
            />

    </LinearLayout>
    </LinearLayout>















