<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#d71345" >
        <LinearLayout
            android:id="@+id/title_back"

            android:layout_width="50dp"
            android:layout_height="60dp">
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="20dip"
            android:background="@drawable/sign"

            />

            </LinearLayout>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#fff"
            android:typeface="monospace"
            android:textSize="24sp" />
        <LinearLayout
            android:id="@+id/title_edit"

            android:layout_width="50dp"
            android:layout_height="60dp">
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="20dip"
        android:background="@drawable/setting"


            android:layout_marginRight="50dip" />
            </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                />
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        tools:context="com.example.diannao.ui" >




        <com.example.shizhan.customfront.gehui.PersonManagement.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_centerInParent="true"
            android:src="@drawable/changing"
            app:civ_border_width="2dp"
            app:civ_border_color="#d71345"
            android:id="@+id/headImage" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="131dp"
            android:layout_marginLeft="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="20dp"

                android:background="#fff" >
                <!--<TextView-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="@dimen/activity_vertical_margin"-->
                    <!--android:gravity="center"-->
                    <!--android:text="习惯"/>-->





                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="性别"/>

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="生日"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"


                android:background="#fff" >
                <!--<TextView-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="@dimen/activity_vertical_margin"-->
                    <!--android:gravity="center"-->
                    <!--android:textColor="#d93a49"-->
                    <!--android:text="2"/>-->





                <TextView
                    android:id="@+id/textview_sex"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="  "
                    android:textColor="#d93a49"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:textColor="#d93a49"
                    android:text="  "/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center_horizontal">
        <TextView
android:id="@+id/tv_signature"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="  "
            android:textColor="#d93a49"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/plist_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#eee"></ListView>




</LinearLayout>
