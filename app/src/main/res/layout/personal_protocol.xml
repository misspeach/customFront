            android:textSize="13dp"
            android:padding="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="        （1）反对宪法所确定的基本原则的；"
            android:textSize="13dp"
            android:padding="10dp"
            />
